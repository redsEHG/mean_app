extends layout 
block content 
    .row.page-header 
        .col-lg-12 
            h1 Форма для отзывов
    .row 
        .col-xs-12.col-md-6 
            form.form-horizontal(action='/location', method='get', role='form')
                .form-group 
                    label.col-xs-10.col-sm-2.control-label(for='name') Имя
                    .col-xs-12.col-sm-10 
                        input#name.form-control(name="Имя")
                .form-group 
                    label.col-xs-10.col-sm-2.control-label("rating")Рэйтинг 
                    .col-xs-12.col-sm-2 
                        select#rating.form-control.input-sm(name="rating")
                            option 5
                            option 4
                            option 3
                            option 2
                            option 1
                .form-group 
                    label.col-sm-2.control-label(for="ваш отзыв") Ваш отзыв
                    .col-sm-10 
                        textarea#review.form-control(name='review', rows = '5')
                button.btn.btn-default.pull-right Добавить отзыв
            .col-xs-12.col-md-4 
            